# --------------------------------------------------
# ~/.zsh_functions
# --------------------------------------------------
# zsh user functions 

elwe() {
    case "$1" in
        hi)
            ssh elwetritsch
            ;;
        push)
            rsync -av --progress -e ssh ~/elwe/incoming/ elwetritsch:~/incoming/
            ;;
        pull)
            rsync -av --progress -e ssh elwetritsch:~/outgoing/ ~/elwe/outgoing/
            ;;
        sync)
            elwe push
            elwe pull
            ;;
        *)
            echo "usage: elwe {hi|push|pull|sync}"
            ;;
    esac
}

