# Dotfile management with 'gitconf'
# https://wiki.archlinux.org/index.php/Dotfiles
#
alias gitc='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'

# cd
#
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'

# chmod
#
alias chmod='chmod -v'

# clear
#
alias c='clear'

# cp
#
alias cp='cp -vi'

# grep
#
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# git
# (see: ,gitconfig)
alias g="git"

# ip 
#

# external ip
alias ipe='curl ipinfo.io/ip'
# local ip
alias ipi='ipconfig getifaddr en0'

# ls
#
alias l='ls -F --color'
alias ls='ls -F'
alias ll='ls -lhF --color'
alias la='ls -alhF --color'

# mv
#
alias mv='mv -vi'

# ping
#
alias ping='ping -c 5'

# pwd 
#
alias p='pwd'

# rm 
#
alias rm='rm -iv'

# ranger
#
alias r="ranger"

# R
#
alias R="R --quiet"
alias R-devel="R-devel --quiet"

# tar
#
alias untar='tar -zxvf'
alias tarit='tar -zcvf'

# wget 
#
alias wget='wget -c '

